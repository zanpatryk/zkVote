{
  "name": "zkvote",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "contracts",
    "frontend"
  ],
  "scripts": {
    "dev": "bun --filter frontend dev",
    "dev:chain": "anvil",
    "build": "bun run build:contracts && bun --filter frontend build",
    "build:contracts": "cd contracts && forge build && cd .. && bun run generate:abis",
    "test:contracts": "cd contracts && forge test -vvv",
    "deploy:local": "cd contracts && make deploy-anvil",
    "deploy:sepolia": "cd contracts && forge script script/DeployVotingSystem.s.sol:DeployVotingSystem --rpc-url $SEPOLIA_RPC_URL --private-key $PRIVATE_KEY --broadcast --verify",
    "generate:abis": "bun scripts/generate-abis.js",
    "start": "bun --filter frontend start"
  }
}
