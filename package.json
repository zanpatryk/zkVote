{
  "name": "zkvote",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "contracts",
    "frontend",
    "circuits",
    "packages/zkvote-lib"
  ],
  "scripts": {
    "dev:frontend": "bun --filter frontend dev",
    "dev:chain": "anvil --code-size-limit 50000",
    "dev:local": "bun scripts/start-local-env.js",
    "build": "bun run build:contracts && bun --filter frontend build",
    "build:contracts": "cd contracts && make build && cd .. && bun run generate:abis",
    "build:circuits": "bun --filter circuits build",
    "generate:abis": "bun scripts/generate-abis.js",
    "setup": "node scripts/setup.js",
    "start": "bun --filter frontend start"
  }
}
