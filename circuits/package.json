{
  "name": "circuits",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "for f in *.circom; do mkdir -p build/${f%.circom} && circom $f --r1cs --wasm --sym -l ../node_modules -o build/${f%.circom}; done",
    "setup": "node scripts/setup.js",
    "test": "mocha test/secretVoteTest.js --timeout 120000 --exit",
    "test:integration": "node test/integrationTest.js"
  },
  "dependencies": {
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "snarkjs": "^0.7.5",
    "ffjavascript": "^0.3.0"
  },
  "devDependencies": {
    "chai": "^6.2.2",
    "mocha": "^11.7.5"
  }
}
